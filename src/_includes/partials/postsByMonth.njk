
{# List all posts by year with month links #}
<header class='blog-page-header'>

    <h1>{{ title }}</h1>
    <p><strong>{{currentCollection | length }}</strong> items published since {{currentCollection[0].data.date | readableDate("DDD")}}</p>

</header>

<article class="writing-index">

{% set allPosts = currentCollection | reverse %}

{% set postsByYear = allPosts | groupByYear %}

{% for year, items in postsByYear %}
  <section class='year-header'>
    <header class='year-index'>
      <h2>{{ year }}</h2>

        {% set postsByMonth = items | groupByMonth %}                 
        {% set year = year %}
      <nav>
        {% include 'partials/monthsOfYear.njk' %}
      </nav>

    </header>

    {% set postslist = items %}

    {% include "partials/postslist.njk" %}

  </section>

{% endfor %}

</article>